{
  "name": "@fforres/webpack-plugin-dx",
  "version": "0.0.3",
  "main": "build/index.js",
  "author": "fforres",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "yarn tsc",
    "dev": "yarn build & DEBUG=ux:webpack_plugin webpack-dev-server --config ./webpack.config.dev.js",
    "debug": "yarn build && DEBUG=ux:webpack_plugin node --inspect-brk ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --config ./webpack.config.dev.js",
    "lint": "eslint --ext=.ts,.tsx src",
    "typecheck": "yarn tsc --noEmit"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/uuid": "^8.3.0",
    "@types/webpack": "^4.41.26",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "ts-node": "^9.1.1"
  },
  "dependencies": {
    "@types/deepmerge": "^2.2.0",
    "debug": "^4.3.1",
    "deepmerge": "^4.2.2",
    "hot-shots": "^8.3.0",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2",
    "webpack": "^4.40.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.0.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ],
      "@babel/preset-react",
      "@babel/preset-typescript"
    ]
  }

{
  "name": "@fforres/webpack-plugin-dx",
  "version": "0.0.8",
  "main": "build/index.js",
  "author": "fforres",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "yarn tsc",
    "run:dev": "DEBUG=ux:webpack_plugin* webpack-dev-server --config ./webpack.config.dev.js",
    "run:debug": "DEBUG=ux:webpack_plugin* node --inspect-brk ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --config ./webpack.config.dev.js",
    "dev": "yarn build && yarn run:dev",
    "debug": "yarn build && yarn run:debug",
    "watch": "yarn tsc --watch",
    "lint": "eslint --ext=.ts,.tsx src",
    "lint:fix": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "typecheck": "yarn tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@fforres/webpack-plugin-dx": "^0.0.8",
    "@types/datadog-metrics": "^0.6.0",
    "@types/debug": "^4.1.5",
    "@types/uuid": "^8.3.0",
    "@types/webpack": "^4.41.26",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "babel-loader": "^8.2.2",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1"
  },
  "dependencies": {
    "@types/deepmerge": "^2.2.0",
    "datadog-metrics": "^0.9.1",
    "debug": "^4.3.1",
    "deepmerge": "^4.2.2",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2",
    "webpack": "^4.40.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.0.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ],
      "@babel/preset-react",
      "@babel/preset-typescript"
    ]
  }
}
